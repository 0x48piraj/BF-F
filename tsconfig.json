{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@bff/*": ["*"]
    },
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["DOM", "ES2015", "ES2018"],
    "strict": true,

    "moduleResolution": "Node",
    "esModuleInterop": true,

    "declaration": true,
    "sourceMap": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
